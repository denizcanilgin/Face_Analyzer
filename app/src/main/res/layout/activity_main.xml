<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="end"
        android:paddingTop="25dp"
        android:paddingEnd="25dp"
        android:elevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_sett"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>


    </LinearLayout>


    <LinearLayout
        android:gravity="start"
        android:paddingTop="25dp"
        android:paddingStart="25dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_premium"
            android:src="@drawable/crownicon"
            android:layout_width="52dp"
            android:layout_height="52dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:elevation="15dp"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cd"
            android:textAlignment="center"
            android:text="how old \n am i looking like?"
            android:textColor="#fff"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-50dp"
        android:gravity="top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_gravity="top"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="15dp">

            <Button
                android:id="@+id/takePic"
                android:background = "@null"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:elevation="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <cdflynn.android.library.checkview.CheckView
                        android:id="@+id/checkTakePhoto"
                        android:padding="10dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:checkView_strokeColor="@color/colorPrimary"
                        app:checkView_strokeWidth="10dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ly_beforePick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:padding="15dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cameraicon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cdbold"
                        android:text="@string/take_photo">

                    </TextView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_gravity="top"
            android:layout_height="175dp"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            card_view:cardBackgroundColor="@color/colorGray"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="15dp">

            <Button
                android:id="@+id/bt_pickImageFromGallery"
                android:background = "@null"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:elevation="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <cdflynn.android.library.checkview.CheckView
                            android:id="@+id/checkPickImage"
                            android:padding="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:checkView_strokeColor="@color/colorPrimary"
                            app:checkView_strokeWidth="10dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:alpha="0.5"
                        android:id="@+id/ly_beforePickGallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:alpha="0.8"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_image_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cdbold"
                            android:text="@string/pick_image">

                        </TextView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <LinearLayout

            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@color/colorGray"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="5dp">

                <Button
                    android:id="@+id/processClick"
                    android:fontFamily="@font/cdbold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:drawablePadding="-30dp"
                    android:drawableLeft="@drawable/mainiconsmall"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_state"
                    android:text="@string/proccess"
                    android:textColor="#fff" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            >


            <LinearLayout
                android:id="@+id/adViewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"

                >

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:adSize="LARGE_BANNER"
                    app:adUnitId="ca-app-pub-2976879956297104/5158075022">

                </com.google.android.gms.ads.AdView>
                <!--        ca-app-pub-2976879956297104/5158075022-->
            </LinearLayout>
        </LinearLayout>









    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:paddingTop="10dp"
        android:paddingBottom="30dp">



    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:id="@+id/ly_loading"
        android:gravity="center"
        android:elevation="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:gravity="center"
        android:background="@color/colorWhite"
        android:alpha="0.9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/loadingLogo"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_width="74dp"
            android:layout_height="74dp"/>
        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>
